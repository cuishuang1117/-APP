<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="top.vchao.examine.activity.TestAnswerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#F16C4D"
        android:orientation="horizontal">

        <Button
            android:id="@+id/_btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="#ffffff"
            android:drawableTop="@drawable/ic_previous"
            android:gravity="center"
            android:text="确认" />

        <Button
            android:id="@+id/_btn_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_finish"
            android:gravity="center"
            android:text="交卷" />

        <Chronometer
            android:id="@+id/_chro_exam"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_time"
            android:gravity="center" />

        <Button
            android:id="@+id/_btn_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_next"
            android:gravity="center"
            android:text="下一题" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_problem"
            android:layout_width="128dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:textColor="#F16C4D"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/et_answer"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="请输入答案"
            android:inputType="numberDecimal"
            android:textColor="#F16C4D"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/et_remain"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="余数"
            android:inputType="numberDecimal"
            android:textColor="#F16C4D"
            android:textSize="30sp"
            android:visibility="invisible" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_test"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pic4" />

</LinearLayout>
